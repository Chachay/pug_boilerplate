extends ../../_templates/simple_bootstrap4.pug

block config
  - var title = 'Bootstrap example'

block content
  nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
    .container-fluid
      a.navbar-brand(href="#") Navbar
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto.mb-2.mb-md-0
          li.nav-item.active
            a.nav-link(aria-current="page" href="#") Home
          li.nav-item
            a.nav-link(href="#") Link
          li.nav-item
            a.nav-link.disabled(href="#" tabindex="-1" aria-disabled="true") Disabled
          li.nav-item.dropdown
            a#dropdown01.nav-link.dropdown-toggle(href="#" data-toggle="dropdown" aria-expanded="false") Dropdown
            ul.dropdown-menu(aria-labelledby="dropdown01")
              li
                a.dropdown-item(href="#") Action
              li
                a.dropdown-item(href="#") Another action
              li
                a.dropdown-item(href="#") Something else here
        form.d-flex
          input.form-control.mr-2(type="search" placeholder="Search" aria-label="Search")
          button.btn.btn-outline-success(type="submit") Search
  main.container
    .starter-template.text-center.py-5.px-3
      h1 Bootstrap starter template
      p.lead
        | Use this document as a way to quickly start any new project.
        br
        |  All you get is this text and a mostly barebones HTML document.
